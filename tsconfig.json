{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "out",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },

    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "types": [
      "webpack-env"
    ],

    "removeComments": true,
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    ".gulp",
    ".vscode-test",
    ".vscode",
    "bin",
    "lib",
    "node_modules",
    "out"
  ]
}
